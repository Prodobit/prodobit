{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/src",
    "rootDir": "./src",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "composite": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}