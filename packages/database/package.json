{
  "name": "@prodobit/database",
  "version": "0.2.2",
  "description": "Database schema and migrations with Drizzle ORM",
  "type": "module",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "scripts": {
    "build": "tsdown && tsc --emitDeclarationOnly",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "db:generate": "pnpm build && drizzle-kit generate",
    "db:migrate": "pnpm build && drizzle-kit migrate",
    "db:studio": "pnpm build && drizzle-kit studio",
    "db:push": "pnpm build && drizzle-kit push"
  },
  "dependencies": {
    "decimal.js": "^10.6.0",
    "drizzle-orm": "^0.44.5",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.31.4",
    "typescript": "^5.6.3"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/prodobit/prodobit.git",
    "directory": "packages/database"
  }
}
