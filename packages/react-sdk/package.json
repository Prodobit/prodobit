{
  "name": "@prodobit/react-sdk",
  "version": "0.3.8",
  "description": "React hooks and providers for Prodobit API",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "pnpm build:js && pnpm build:types",
    "build:js": "pnpm tsdown",
    "build:types": "tsc src/index.ts --declaration --emitDeclarationOnly --outDir dist --jsx react-jsx --target es2022 --module esnext --moduleResolution bundler --allowSyntheticDefaultImports --esModuleInterop --skipLibCheck",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@prodobit/config": "workspace:*",
    "@prodobit/sdk": "workspace:*",
    "@prodobit/types": "workspace:*",
    "@tanstack/react-query": "^5.0.0"
  },
  "peerDependencies": {
    "react": "^19.1.1"
  },
  "devDependencies": {
    "@types/react": "^19.1.1",
    "typescript": "^5.6.3"
  },
  "keywords": [
    "react",
    "hooks",
    "prodobit",
    "erp",
    "api",
    "react-query",
    "typescript"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/prodobit/prodobit.git",
    "directory": "packages/react-sdk"
  }
}
