{
  "name": "@prodobit/server",
  "version": "0.1.1",
  "description": "Prodobit modular server core",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "type": "module",
  "scripts": {
    "build": "swc src -d dist --copy-files",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@prodobit/config": "workspace:*",
    "@prodobit/database": "workspace:*",
    "@prodobit/types": "workspace:*",
    "arktype": "2.1.20",
    "bcryptjs": "^2.4.3",
    "decimal.js": "^10.6.0",
    "drizzle-orm": "^0.37.0",
    "hono": "^4.6.13",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.5",
    "resend": "^6.0.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/prodobit/prodobit.git",
    "directory": "packages/server"
  }
}