{
  "name": "@prodobit/server",
  "version": "0.8.3",
  "description": "Prodobit modular server core",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "type": "module",
  "scripts": {
    "build": "pnpm build:js && pnpm build:types",
    "build:js": "pnpm tsdown",
    "build:types": "cd ../.. && tsc --project packages/server/tsconfig.json --declaration --emitDeclarationOnly",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@prodobit/config": "workspace:*",
    "@prodobit/database": "workspace:*",
    "@prodobit/types": "workspace:*",
    "arktype": "2.1.20",
    "decimal.js": "^10.6.0",
    "drizzle-orm": "^0.44.5",
    "hono": "4.9.6",
    "jsonwebtoken": "^9.0.2",
    "postgres": "^3.4.5",
    "resend": "^6.0.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/prodobit/prodobit.git",
    "directory": "packages/server"
  }
}
