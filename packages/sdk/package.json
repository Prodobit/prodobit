{
  "name": "@prodobit/sdk",
  "version": "0.1.2",
  "description": "TypeScript SDK for Prodobit API",
  "type": "module",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.cjs"
    },
    "./client": {
      "types": "./dist/src/client.d.ts",
      "import": "./dist/src/client.js"
    },
    "./framework": {
      "types": "./dist/src/framework/index.d.ts",
      "import": "./dist/src/framework/index.js"
    },
    "./validation": {
      "types": "./dist/src/validation/index.d.ts",
      "import": "./dist/src/validation/index.js"
    },
    "./types": {
      "types": "./dist/src/types.d.ts",
      "import": "./dist/src/types.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run clean && npm run compile && npm run generate-types",
    "compile": "swc src -d dist --copy-files",
    "generate-types": "tsc --emitDeclarationOnly --outDir dist/src",
    "clean": "rm -rf dist",
    "dev": "swc src -d dist --copy-files --watch",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'Linting skipped - no linter configured'",
    "test": "echo 'Tests skipped - no test framework configured'"
  },
  "dependencies": {
    "@prodobit/types": "workspace:*",
    "arktype": "2.1.20"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.3",
    "typescript": "^5.6.3"
  },
  "keywords": [
    "prodobit",
    "sdk",
    "typescript",
    "api-client",
    "erp",
    "manufacturing"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prodobit/prodobit.git",
    "directory": "packages/sdk"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false
}
