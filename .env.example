# Server Configuration
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/prodobit

# JWT Secret
JWT_SECRET=your-secret-key-here

# Logging
LOG_LEVEL=debug # trace, debug, info, warn, error, fatal

# Logflare (Optional - for production monitoring)
# Get your API key from https://logflare.app
# LOGFLARE_API_KEY=your-api-key
# LOGFLARE_SOURCE_TOKEN=your-source-token

# Email (Resend)
EMAIL_API_KEY=
EMAIL_FROM_EMAIL=noreply@example.com
EMAIL_FROM_NAME="Prodobit"

# SMS (NetGSM)
NETGSM_USERNAME=
NETGSM_PASSWORD=
NETGSM_HEADER=

# Storage (S3/R2/DO Spaces)
STORAGE_PROVIDER=r2 # s3, r2, do_spaces
STORAGE_ENDPOINT=https://your-account.r2.cloudflarestorage.com
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
STORAGE_BUCKET=prodobit
STORAGE_REGION=auto
STORAGE_PUBLIC_URL=https://your-public-url.com

# CORS
CORS_ORIGIN=http://localhost:3000

# Cookie Settings
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_PREFIX=prodobit
